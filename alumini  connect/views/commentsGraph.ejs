<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments per Blog</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <h2>Comments per Blog</h2>
    
    <!-- Canvas for Chart.js -->
    <canvas id="commentsChart" width="400" height="200"></canvas>

    <script>
        // Get blogComments from the passed data
        const blogComments = <%- JSON.stringify(blogComments) %>;

        // Check if blogComments is available and correctly passed
        console.log(blogComments);  // This will help verify the data

        // Extract titles and comment counts from blogComments
        const blogTitles = blogComments.map(item => item.title);
        const commentCounts = blogComments.map(item => item.commentCount);

        // Chart.js setup
        const ctx = document.getElementById('commentsChart').getContext('2d');
        const commentsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: blogTitles,  // Blog titles as labels
                datasets: [{
                    label: 'Number of Comments',
                    data: commentCounts,  // Comment counts as data
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',  // Bar color
                    borderColor: 'rgba(75, 192, 192, 1)',  // Border color
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Comments per Blog'
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>
</body>
</html>
