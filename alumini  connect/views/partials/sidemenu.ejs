<div class="side-menu" id="sideMenu">
    <div class="side-menu-header">

        <% if (user) { %>
            <div class="user-profile">
                <img 
                    src="<%= user.profileImageUrl || '/images/profile.png' %>" 
                    alt="Profile" 
                    width="50" 
                    height="50" 
                    class="rounded-circle"
                    onerror="this.src='/images/default-profile.png';" 
                >
                <span class="ms-2"><%= user.fullname || 'Guest' %></span>
            </div>
        <% }
        else { %>
            <div class="user-profile">
                <img 
                    src="/images/default-profile.png" 
                    alt="Guest Profile" 
                    width="50" 
                    height="50" 
                    class="rounded-circle"
                >
                <span class="ms-2">Guest</span>
            </div>
        <% } %>
    </div>
    <div class="side-menu-items">
        <a href="/" class="side-menu-item">
            <i class="bi bi-house-door"></i> Home
        </a>
        <a href="blog/add-blog" class="side-menu-item">
            <i class="bi bi-plus-square"></i> Add Blog
        </a>
        <a href="/profile" class="side-menu-item">
            <i class="bi bi-person"></i> Profile
        </a>
        <a href="/settings" class="side-menu-item">
            <i class="bi bi-gear"></i> Settings
        </a>
        <a href="/comments" class="side-menu-item">
            <i class="bi bi-chat-left-text"></i> Comments
        </a>
        <a href="/stats" class="side-menu-item">
            <i class="bi bi-bar-chart-line"></i> Stats
        </a>
        <a href="/earnings" class="side-menu-item">
            <i class="bi bi-cash-coin"></i> Earnings
        </a>
        <a href="/logout" class="side-menu-item">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
</div>
<style>



    /* General styles for the side menu */
.side-menu {
    position: fixed;
    top: 30;
    left: 0;
    width: 250px; /* Default width */
    height: 100vh; /* Full height */
    background-color: #181818; /* Dark background color for night mode */
    color: #fff;
    font-family: Arial, sans-serif;
    padding-top: 20px;
    box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease-in-out, width 0.3s ease-in-out;
}

/* Hamburger Icon */
.hamburger-icon {
    background: none;
    border: none;
    color: #fff;
    font-size: 24px;
    cursor: pointer;
    display: none; /* Default hidden */
    position: absolute;
    top: 20px;
    right: 20px;
}

/* Side Menu Header */
.side-menu-header {
    text-align: center;
    padding: 20px;
    border-bottom: 2px solid #333;
    position: relative; /* For positioning the hamburger icon */
}

.side-menu-brand {
    font-size: 24px;
    font-weight: bold;
    color: #f0f0f0;
    text-decoration: none;
}

/* Side Menu Items */
.side-menu-items {
    flex-grow: 1;
    padding: 20px 0;
    list-style-type: none;
    margin: 0;
}

.side-menu-item {
    display: flex;
    align-items: center;
    padding: 15px 20px;
    text-decoration: none;
    color: #d1d1d1;
    font-size: 18px;
    margin-bottom: 10px;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.side-menu-item:hover {
    background-color: #444;
    color: #fff;
    border-radius: 5px;
}

.side-menu-item i {
    font-size: 22px;
    margin-right: 15px;
}

/* Active Item Styling */
.side-menu-item.active {
    background-color: #007bff;
    color: #fff;
}

/* Media Query for Responsive Collapse */
@media (max-width: 768px) {
    .side-menu {
        transform: translateX(-20px); /* Hide side menu */
        width: 35%; /* Collapse to full width when toggled */
    }

    .side-menu.open {
        transform: translateX(0); /* Show side menu */
    }

    .hamburger-icon {
        display: block; /* Show hamburger icon on smaller screens */
    }
}

</style>
<script>


document.addEventListener("DOMContentLoaded", function () {
    const sideMenu = document.getElementById("sideMenu");
    const hamburgerIcon = document.getElementById("hamburgerIcon");

    // Toggle the menu open/close on click
    hamburgerIcon.addEventListener("click", function () {
        sideMenu.classList.toggle("open");
    });
});

</script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
