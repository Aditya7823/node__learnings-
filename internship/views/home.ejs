    <!-- Add custom styles for blog layout -->
    <style>
        /* Style for the card container */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 60px;
            justify-content: center;
        }

        /* Each card style */
        .card {
            width: 100%; /* Default width (full width on small screens) */
            max-width: 300px; /* Maximum width for cards */
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px  #ddd;
            transition: transform 0.3s ease-in-out;
            background-image: url('/images/grey.avif');
        }

        .card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem;
            color: #000000;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 8px 16px;
            text-decoration: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Hover effect for cards */
        .card:hover {
            transform: scale(1.05);
        }

        /* Responsive design */
        @media (min-width: 1200px) {
            .card {
                width: 30%; /* 3 cards per row for larger screens */
            }
        }

        @media (max-width: 1199px) and (min-width: 768px) {
            .card {
                width: 45%; /* 2 cards per row for medium screens */
            }
        }

        @media (max-width: 767px) {
            .card {
                width: 100%; /* 1 card per row for small screens */
            }
        }
        /* General body styling */
body {
    background-color: #000; /* Black background */
    color: #fff; /* White text */
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

/* Main welcome container styling */
.welcome-container {
    margin-top: 30px;
    padding: 20px;
}

/* Heading styling */
.welcome-heading {
    font-size: 3rem;
    font-weight: bold;
    color: #fff;
    text-transform: uppercase;
    animation: fadeIn 2s ease-in-out;
}

/* Section styling */
.section {
    margin-top: 30px;
}

/* Section heading styling */
.section-heading {
    font-size: 2rem;
    font-weight: bold;
    color: #bbb; /* Gray color */
    text-transform: capitalize;
    animation: fadeIn 2s ease-in-out;
}

/* Section text styling */
.section-text {
    font-size: 1.2rem;
    color: #ddd; /* Light gray */
    line-height: 1.6;
    animation: fadeIn 3s ease-in-out;
}

/* Highlighted text styling */
.highlight-text {
    color: #007bff; /* Blue for emphasis */
}

/* Fade-in animation */
@keyframes fadeIn {
    0% {
        opacity: 0;
        transform: translateY(10px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Section animation delay */
.section:nth-child(1) {
    animation-delay: 0s;
}
.section:nth-child(2) {
    animation-delay: 0.5s;
}
.section:nth-child(3) {
    animation-delay: 1s;
}
.section:nth-child(4) {
    animation-delay: 1.5s;
}

        body {
