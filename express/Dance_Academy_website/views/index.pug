doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Dance Academy
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/static/style.css')
    link(rel='icon', type='image/png', href='/static/icon.png')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Roboto:wght@400&display=swap', rel='stylesheet')

  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-black.py-3
      .container
        a.navbar-brand(href='#') LUMINANCE
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='#') Home
            li.nav-item
              a.nav-link(href='#about') About Us
            li.nav-item
              a.nav-link(href='#classes') Classes
            li.nav-item
              a.nav-link(href='#gallery') Gallery
            li.nav-item
              a.nav-link(href='#contact') Contact

    // Hero Section with Dance Image and Slogan
    section#hero
      .hero-image
        img(src='/static/dance.jpg', alt='Dance Image', class='img-fluid')
        .overlay
          h1.display-3.text-center.slogan 
            // Dance is the language of the soul
            span.dance(data-letter='D', style='--index: 0') D
            span.dance(data-letter='a', style='--index: 1') a
            span.dance(data-letter='n', style='--index: 2') n
            span.dance(data-letter='c', style='--index: 3') c
            span.dance(data-letter='e', style='--index: 4') e
            | &nbsp; 
            span.is(data-letter='i', style='--index: 5') i
            span.is(data-letter='s', style='--index: 6') s
            | &nbsp; 
            | &nbsp; 
            span.the(data-letter='t', style='--index: 7') t
            span.the(data-letter='h', style='--index: 8') h
            span.the(data-letter='e', style='--index: 9') e
            | &nbsp; 
            | &nbsp; 
            span.language(data-letter='l', style='--index: 10') l
            span.language(data-letter='a', style='--index: 11') a
            span.language(data-letter='g', style='--index: 12') g
            span.language(data-letter='u', style='--index: 13') u
            span.language(data-letter='a', style='--index: 14') a
            span.language(data-letter='g', style='--index: 15') g
            span.language(data-letter='e', style='--index: 16') e
            | &nbsp; 
            | &nbsp; 
            span.of(data-letter='o', style='--index: 17') o
            span.of(data-letter='f', style='--index: 18') f
            | &nbsp;  
            span.the(data-letter='t', style='--index: 19') t
            span.the(data-letter='h', style='--index: 20') h
            span.the(data-letter='e', style='--index: 21') e
            | &nbsp; 
            span.soul(data-letter='S', style='--index: 22') S
            span.soul(data-letter='o', style='--index: 23') o
            span.soul(data-letter='u', style='--index: 24') u
            span.soul(data-letter='l', style='--index: 25') l

    // Achievements and Sponsors Section
    section#achievements.bg-black.text-white.py-5
      .container.text-center
        h2.mb-4 Our Sponsors & Achievements
        .row
          .col-md-4
            .achievement-box
              img(src='/static/sponsor1.png', alt='Sponsor 1', class='img-fluid sponsor-img')
              p Sponsor 1
          .col-md-4
            .achievement-box
              img(src='/static/sponsor2.png', alt='Sponsor 2', class='img-fluid sponsor-img')
              p Sponsor 2
          .col-md-4
            .achievement-box
              img(src='/static/award.png', alt='Best Dance Academy Award', class='img-fluid sponsor-img')
              p Best Dance Academy Award 2024

    // Footer Section
    footer.bg-black.text-white.text-center.py-4
      p &copy; 2024 Dance Academy. All rights reserved.
      p Follow us on
      .social-icons
        a(href='#') 
          i.fab.fa-facebook-f
        a(href='#') 
          i.fab.fa-instagram
        a(href='#') 
          i.fab.fa-twitter

    // Scripts
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')
    script.
      document.addEventListener("DOMContentLoaded", function() {
        const spans = document.querySelectorAll('.slogan span');
        spans.forEach((span, index) => {
          // Adding a delay for each letter
          span.style.animationDelay = `${index * 0.1}s`;
          span.classList.add('drop');
        });
      });
