doctype html
html(lang="en")
  head
    title User Info Form
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #000000; // Black background
        color: #ff1493; // Dark pink text
      }

  body
    .container
      h1.text-center My Website
      .row
        .col-md-6
          h2 Enter Your Details
          form(action="/submit_form" method="POST")
            .mb-3
              label(for="name" class="form-label") Name
              input#name.form-control(type="text" name="name" required)
            .mb-3
              label(for="email" class="form-label") Email
              input#email.form-control(type="email" name="email" required)
            .mb-3
              label(for="address" class="form-label") Address
              input#address.form-control(type="text" name="address" required)
            .mb-3
              label(for="phone" class="form-label") Phone Number
              input#phone.form-control(type="tel" name="phone" required)
            .mb-3
              label(for="gender" class="form-label") Gender
              select#gender.form-control(name="gender")
                option(value="male") Male
                option(value="female") Female
                option(value="other") Other
            .mb-3
              label(for="dob" class="form-label") Date of Birth
              input#dob.form-control(type="date" name="dob" required)
            .mb-3
              label(for="message" class="form-label") Message
              textarea#message.form-control(name="message" rows="4")
            button.btn.btn-primary(type="submit") Submit
        .col-md-6
          h2 Information
          p Welcome to our website! Please fill out the form on the left to submit your information.
