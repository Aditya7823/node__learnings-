doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Transparent Form with Navbar
    link(rel="stylesheet", href="/static/styles.css") 
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
 body
    nav.navbar
      .container
        a.navbar-brand(href="#") My Website
        .navbar-links
          a.nav-link(href="#") Home
          a.nav-link(href="#") About
          a.nav-link(href="#") Contact

    .form-container
      h2 Information Form
      form
        .form-group
          label(for="name") Name
          input(type="text", id="name", placeholder="Enter your name", required)
        .form-group
          label(for="gender") Gender
          select(id="gender", required)
            option(value="" disabled selected) Select your gender
            option(value="male") Male
            option(value="female") Female
            option(value="other") Other
        .form-group
          label(for="address") Address
          input(type="text", id="address", placeholder="Enter your address", required)
        .form-group
          label(for="otherInfo") Other Information
          textarea(id="otherInfo", rows="3", placeholder="Additional info", required)
        button(type="submit", class="btn-submit") Submit
