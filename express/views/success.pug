doctype html
html(lang="en")
  head
    title Submission Successful
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #000000; // Black background
        color: #ff1493; // Dark pink text
      }

    script.
      window.onload = function() {
        // Show an alert with the received information
        alert(`Submission Successful!\n\nName: #{name}\nEmail: #{email}\nAddress: #{address}\nPhone: #{phone}\nGender: #{gender}\nDate of Birth: #{dob}\nMessage: #{message}`);
      }

  body
    .container
      h1.text-center Submission Successful
      p.text-center Your information has been successfully submitted!
      a.btn.btn-primary(href="/demo") Go Back to Form
